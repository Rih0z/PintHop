{
  "name": "pinthop",
  "version": "0.1.0",
  "description": "Craft beer discovery and social presence-sharing platform",
  "private": true,
  "scripts": {
    "dev": "./scripts/dev.sh start",
    "test": "./scripts/dev.sh test",
    "lint": "./scripts/dev.sh lint",
    "build": "./scripts/dev.sh build",
    "seed": "./scripts/dev.sh seed",
    "clean": "./scripts/dev.sh clean",
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd backend && npm install",
    "setup:frontend": "cd frontend && npm install",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test:backend && npm run test:frontend && npm run test:e2e"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cypress": "^13.6.0",
    "@types/cypress": "^1.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rih0z/PintHop.git"
  },
  "keywords": [
    "craft-beer",
    "social",
    "brewery",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Koki Riho",
  "license": "MIT"
}